<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imgLoginLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/to_de_olho" />

        <br.com.todeolho.todeolho.component.CustomButton
            android:id="@+id/btnLoginFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:background="@drawable/button_facebook"
            android:textColor="@color/colorWhite"
            android:text="@string/logarfacebook"
            android:layout_below="@+id/imgLoginLogo"
            android:onClick="logarFacebook"/>


        <br.com.todeolho.todeolho.component.CustomTextView
            android:id="@+id/lblLoginCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:text="@string/cadastrese"
            android:layout_below="@+id/btnLoginFacebook"
            android:onClick="cadastrarNovoUsuario"/>

        <br.com.todeolho.todeolho.component.CustomTextView
            android:id="@+id/lblLoginAjuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:text="@string/ajuda"
            android:onClick="ajudarUsuario"/>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>